---
import { keynote } from "@src/data/schedules/index"
import { year } from "@src/data/date"
import Keynotes from "./Keynotes.svelte"
---

<section id="keynote" class="rows">
  <div>
    <h2>
      Keynote Speakers
    </h2>
  </div>
  <div class="grid">
    <Keynotes keynote={keynote} client:visible />
  </div>
</section>

<style>
  h2 {
    --stroke-color: var(--red);
  }
  .grid {
    --columns: 2;
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    grid-gap: 1rem;
  }

  @media screen and (min-width: 960px) {
    .grid {
      --columns: 3;
    }
  }
</style>
